{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:playwright/recommended",
    "plugin:jsonc/recommended-with-jsonc",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier", "playwright", "jsonc"],
  "rules": {
    "prettier/prettier": "warn",
    "no-unused-vars": "warn",
    "eqeqeq": "error",
    "curly": "error"
  }
}
