{
    "name": "challenge-playwright",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "prepare": "husky",
        "testAmazon": "npx playwright test --project=chromium --headed amazon.spec.js",
        "challengeOne": "node challenge1/challenge.js",
        "reportHtml": "npx playwright show-report",
        "agent:planner": "set PLAYWRIGHT_ENABLE_EXPERIMENTAL_AGENTS=1 && npx playwright agent planner --url https://automationexercise.com/",
        "agent:generator": "set PLAYWRIGHT_ENABLE_EXPERIMENTAL_AGENTS=1 && npx playwright agent generator --plan planner-output.md --output tests/ --language javascript"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@playwright/test": "^1.56.1",
        "@types/node": "^20.12.12",
        "cross-env": "^10.1.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsonc": "^2.13.0",
        "eslint-plugin-playwright": "^2.2.0",
        "eslint-plugin-prettier": "^5.2.3",
        "husky": "^9.1.7",
        "jsonc-eslint-parser": "^2.4.0",
        "lint-staged": "^15.4.3",
        "prettier": "^3.5.1"
    },
    "dependencies": {
        "@cliqz/adblocker-playwright": "^1.27.11",
        "cross-fetch": "^4.0.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,yml}": [
            "prettier --write"
        ]
    }
}
